  <h5><%= user.name %></h5>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "削除", user, method: :delete,
                                  data: { confirm: "削除してよろしいですか？" } ,
                                  :style=>"color:white;", class: "btn btn-default btn-primary" %>
                                  
           
<!-- QA bootstrap アコーディオン -->
    <div class="panel panel-default">
  		<div class="panel-heading">
  			<h3 class="panel-title">
  				<a style="display:block; color:white; " class= " btn button-small-size btn-primary" data-toggle="collapse" data-parent="#sampleAccordion" href="#sampleAccordionCollapse<%= user.id %>" >
          <h5>編集</h5>
  				</a>
  			</h3>
  		</div>
  	<div id=  "sampleAccordionCollapse<%= user.id %>"  class="panel-collapse collapse">
  		<div class="panel-body">

       <%= form_for(user, remote: true, html:{:id => ''}) do |f| %>
        <%= f.label :name, "名前"%>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, "メールアドレス"%>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :affiliation, "所属"%>
        <%= f.text_field :affiliation, class: 'form-control' %>

        <%= f.label :uid, "社員番号"%>
        <%= f.number_field :uid, class: 'form-control' %>

        <%= f.label :cardID, "カードID"%>
        <%= f.text_field :cardID, class: 'form-control' %>

        <%= f.label :password, "パスワード"%>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :basictime, "基本勤務時間" %>
        <%= f.time_field :basictime, class: 'form-control' %>

        <%= f.label :workingtime, "指定勤務開始時間" %>
        <%= f.time_field :workingtime, class: 'form-control' %>
        
        <%= f.label :working_time_End, "指定勤務終了時間" %>
        <%= f.time_field :working_time_End, class: 'form-control' %>
      
        <%= submit_tag '編集する' , class: "btn btn-lg btn-primary"  %>
        
  			</div>
  		</div>
  	</div>

       <% end %>
  <% end %>
<div>
</div>