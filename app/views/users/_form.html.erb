<%= form_for(@user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :ユーザ名 %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :メールアドレス %>
  <%= f.email_field :email, class: 'form-control' %>
  
  <%= f.label :所属 %>
  <%= f.text_field :affiliation, class: 'form-control' %>
  
  <%= f.label :uid, "社員番号"%>
  <%= f.number_field :uid, class: 'form-control' %>
  
  <%= f.label :cardID, "カードID"%>
  <%= f.number_field :cardID, class: 'form-control' %>
  
  <%= f.label :basictime, "基本勤務時間"%>
  <%= f.time_field :basictime, class: 'form-control' %>
  
  <%= f.label :workingtime, "指定勤務開始時間"%>
  <%= f.time_field :workingtime, class: 'form-control' %>
  
  <%= f.label :working_time_End, "指定勤務終了時間"%>
  <%= f.time_field :working_time_End, class: 'form-control' %>

  <%= f.label :パスワード %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :パスワード再入力 %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>